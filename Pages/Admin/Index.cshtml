<script>
        function updateFullName() {
        const firstName = document.getElementById('FirstName').value || "";
        const fatherName = document.getElementById('FatherName').value || "";
        const grandfatherName = document.getElementById('GrandfatherName').value || "";
        const greatGrandfatherName = document.getElementById('GreatGrandfatherName').value || "";

        const fullName = `${firstName} ${fatherName} ${grandfatherName} ${greatGrandfatherName}`.trim();

        document.getElementById('FullName').value = fullName;
        document.getElementById('FullNameHidden').value = fullName;
    }

    function enableFieldsWithValues() {

        let fields = [
            HaveNotarizedGuardianship, NumberOfWives, NumberOfChildren, ChildrenLessThan18,
            ChildrenMoreThan18, DisabilityPercent, FirstWife, SecondWife, thirdWife, FourthWife,
            AddServiceDays, AddServiceMonths, AddServiceYears,
            DropServiceDays, DropServiceMonths, DropServiceYears , PlaceLastTenYear
        ];

        fields.forEach(field => {
            if (field.value.trim() !== "" && field.value !== "يوم" && field.value !== "شهر" && field.value !== "سنة") {
                field.disabled = false;
            } else {
                field.disabled = true;
            }
        });
    }
        //فلتر الجنس مع الحالة الاجتماعية
    function FilterGender() {
        const selectedGender = GenderId.value;
        const options = MaritalStatusId.options;

        for (let i = 0; i < options.length; i++) {
            const option = options[i];
            const value = parseInt(option.value, 10);

            if (selectedGender == 1) {
                option.style.display = (value == 1 || value == 2 || value == 4 || value == 5) ? 'block' : 'none';
            } else if (selectedGender == 2) {
                option.style.display = (value == 1 || value == 3 || value == 4 || value == 5) ? 'block' : 'none';
            } else {
                option.style.display = 'none';
            }
        }
    }

    // تأخير تنفيذ الدالتين بعد تحميل الصفحة
        document.addEventListener("DOMContentLoaded", function() {
        setTimeout(updateFullName, 2000);
        setTimeout(enableFieldsWithValues, 3000);
        setTimeout(FilterGender, 3000);

    });

</script>
